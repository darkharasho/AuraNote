{
  "name": "auranote",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"No tests configured\"",
    "clear-tabs": "electron scripts/clear-tabs.js",
    "prebuild": "electron-builder install-app-deps",
    "build": "node scripts/build-installer.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@milkdown/core": "^7.3.1",
    "@milkdown/plugin-listener": "^7.3.1",
    "@milkdown/preset-commonmark": "^7.3.1",
    "@milkdown/prose": "^7.3.1",
    "@milkdown/theme-nord": "^7.3.1",
    "@milkdown/utils": "^7.3.1",
    "electron": "^25.9.8",
    "electron-updater": "^6.6.2",
    "lodash-es": "^4.17.21",
    "mica-electron": "^1.5.16",
    "nanoid": "^5.0.9"
  },
  "devDependencies": {
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.auranote.app",
    "productName": "AuraNote",
    "directories": {
      "output": "dist",
      "buildResources": "media"
    },
    "files": [
      "**/*"
    ],
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "media/AuraNote.png"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "media/AuraNote.ico"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "media/AuraNote.png"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "darkharasho",
        "repo": "AuraNote"
      }
    ]
  }
}
