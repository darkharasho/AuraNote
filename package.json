{
  "name": "auranote",
  "version": "1.0.1",
  "description": "",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"No tests configured\"",
      "clear-tabs": "electron app/scripts/clear-tabs.js",
      "prebuild": "electron-builder install-app-deps",
      "build": "node app/scripts/build-installer.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@milkdown/core": "^7.3.1",
    "@milkdown/plugin-listener": "^7.3.1",
    "@milkdown/preset-commonmark": "^7.3.1",
    "@milkdown/prose": "^7.3.1",
    "@milkdown/theme-nord": "^7.3.1",
    "@milkdown/utils": "^7.3.1",
    "electron-updater": "^6.6.2",
    "lodash-es": "^4.17.21",
    "mica-electron": "^1.5.16",
    "nanoid": "^5.0.9"
  },
  "devDependencies": {
    "electron-builder": "^26.0.12",
    "electron": "^25.9.8"
  },
  "build": {
    "appId": "com.auranote.app",
    "productName": "AuraNote",
    "artifactName": "AuraNote-${version}-setup.${ext}",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**"
    ],
    "win": {
      "target": "nsis",
        "icon": "media/AuraNote.png"
    },
    "mac": {
        "icon": "media/AuraNote.png"
    },
    "linux": {
        "icon": "media/AuraNote.png",
      "target": [
        "AppImage"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": true,
      "perMachine": true,
      "deleteAppDataOnUninstall": true
    },
    "publish": [
      {
        "provider": "github"
      }
    ]
  }
}
